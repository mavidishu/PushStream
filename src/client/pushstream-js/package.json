{
  "name": "pushstream-js",
  "version": "0.1.0",
  "description": "Lightweight JavaScript client for PushStream SSE events with auto-reconnection and event-driven API",
  "author": "Dishu Mavi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dishumavi/PushStream.git",
    "directory": "src/client/pushstream-js"
  },
  "homepage": "https://github.com/dishumavi/PushStream#readme",
  "bugs": {
    "url": "https://github.com/dishumavi/PushStream/issues"
  },
  "keywords": [
    "sse",
    "server-sent-events",
    "eventsource",
    "realtime",
    "push",
    "stream",
    "real-time",
    "events"
  ],
  "main": "dist/pushstream.cjs.js",
  "module": "dist/pushstream.esm.js",
  "browser": "dist/pushstream.min.js",
  "unpkg": "dist/pushstream.min.js",
  "jsdelivr": "dist/pushstream.min.js",
  "exports": {
    ".": {
      "import": "./dist/pushstream.esm.js",
      "require": "./dist/pushstream.cjs.js",
      "browser": "./dist/pushstream.min.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "test": "node --test tests/*.test.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "rollup": "^4.9.0",
    "@rollup/plugin-terser": "^0.4.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}